<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/' >
       <appender name="myConsole" class="org.apache.log4j.ConsoleAppender">
              <layout class="org.apache.log4j.PatternLayout">
                     <param name="ConversionPattern"
                            value="[%d{dd HH:mm:ss,SSS\} %-5p] [%t] %c{2\} - %m%n" />
              </layout>
              <!--过滤器设置输出的级别-->
              <filter class="org.apache.log4j.varia.LevelRangeFilter">
                     <param name="levelMin" value="debug" />
                     <param name="levelMax" value="warn" />
                     <param name="AcceptOnMatch" value="true" />
              </filter>
       </appender>

       <appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
              <param name="File" value="/home/admin/hj/logs/hh.log" /><!-- 设置日志输出文件名 -->
              <!-- 设置是否在重新启动服务时，在原有日志的基础添加新日志 -->
              <param name="Append" value="false" />
              <param name="MaxBackupIndex" value="10" />
              <layout class="org.apache.log4j.PatternLayout">
                     <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS\} %-5p] [%t] %c{2\} - %m%n"  />
              </layout>
       </appender>

       <appender name="file1" class="org.apache.log4j.DailyRollingFileAppender">
              <param name="File" value="/home/admin/hj/logs/h1.log" /><!-- 设置日志输出文件名 -->
              <!-- 设置是否在重新启动服务时，在原有日志的基础添加新日志 -->
              <param name="Append" value="false" />
              <param name="MaxBackupIndex" value="10" />
              <layout class="org.apache.log4j.PatternLayout">
                     <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS\} %-5p] [%t] %c{2\} - %m%n"  />
              </layout>
       </appender>

       <!--<logger name="com.hj.controller" additivity="false">-->
              <!--<level value="info" />-->
              <!--<appender-ref ref="file"/>-->
       <!--</logger>-->

       <!--<logger name="com.hj.biz" additivity="false">-->
              <!--<level value="info"/>-->
              <!--<appender-ref ref="file1"/>-->
       <!--</logger>-->

       <!-- 根logger的设置-->
       <root>
              <level value ="info"/>
              <appender-ref ref="file"/>
              <appender-ref ref="myConsole"/>
       </root>
</log4j:configuration>